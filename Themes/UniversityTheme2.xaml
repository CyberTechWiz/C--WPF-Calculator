<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ImageBrush x:Key="BackgroundImage" ImageSource="/Media/backgrounds/UniversityTheme2Background.jpg" Stretch="UniformToFill" />
    <!-- Цвет панели заголовка для светлой темы -->
    <SolidColorBrush x:Key="TitleBarBackground" Color="#2e2e2e" />
    <SolidColorBrush x:Key="TitleBarForeground" Color="#efdba8" />

    <!-- Цвета для Стиль для кнопок панели управления окно -->
    <Color x:Key="TitleBarButtonStyleHoverBackgroundColor1">#80311f11</Color>
    <Color x:Key="TitleBarButtonStyleHoverBackgroundColor2">#80311f11</Color>
    <Color x:Key="TitleBarButtonStyleHoverBackgroundColor3">#30311f11</Color>

    <SolidColorBrush x:Key="ContextMenuButtonStyleHoverBackgroundBrush" Color="{DynamicResource TitleBarButtonStyleHoverBackgroundColor1}" />
    <SolidColorBrush x:Key="TitleBarButtonStyleHoverBackgroundBrush" Color="{DynamicResource TitleBarButtonStyleHoverBackgroundColor2}" />



    <!-- Изображение для кнопки меню для светлой темы -->
    <BitmapImage x:Key="GearIcon" UriSource="/Media/Images/university2_gear.png"/>


    <!-- Цвет текста диспеля -->
    <SolidColorBrush x:Key="DisplayBoxForeground" Color="#e2c08b" />
    <SolidColorBrush x:Key="DisplayBoxBackground" Color="#90a6763e"/>

    <!-- Для окна о программе -->
    <SolidColorBrush x:Key="AboutWindowBackground" Color="#905f391a"/>
    <SolidColorBrush x:Key="HyperlinkColor" Color="#825729"/>
    <SolidColorBrush x:Key="HyperlinkColor2" Color="#5f391a"/>
    <SolidColorBrush x:Key="HyperlinkColor3" Color="#696554"/>



    <!-- Цвета для кнопок -->
    <Color x:Key="ButtonBackgroundColor">#e2b87b</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#c29f6b</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#e2b87b</Color>
    <Color x:Key="ButtonForegroundColor">#efdba8</Color>
    <Color x:Key="ButtonPressedForegroundColor">#9eb7d0</Color>


    <!-- Цвета для Светлый стиль для цифр -->
    <Color x:Key="LightButtonBackgroundColor">#efdba8</Color>
    <Color x:Key="LightButtonHoverBackgroundColor">#ccbb91</Color>
    <Color x:Key="LightButtonPressedBackgroundColor">#efdba8</Color>

    <!-- Цвета для ТЁмный стиль для sci и bas -->
    <Color x:Key="DarkButtonBackgroundColor">#81592b</Color>
    <Color x:Key="DarkButtonHoverBackgroundColor">#684823</Color>
    <Color x:Key="DarkButtonPressedBackgroundColor">#81592b</Color>

    <!-- Особенный цвет для операций -->
    <Color x:Key="OperationButtonBackgroundColor">#a49172</Color>
    <Color x:Key="OperationButtonHoverBackgroundColor">#85755d</Color>
    <Color x:Key="OperationButtonPressedBackgroundColor">#a49172</Color>
    <Color x:Key="OperationButtonForegroundColor">#efdba8</Color>

    <!-- Особенный цвет для = -->
    <Color x:Key="EqualButtonBackgroundColor">#b1c3d0</Color>
    <Color x:Key="EqualButtonHoverBackgroundColor">#8599ae</Color>
    <Color x:Key="EqualButtonPressedBackgroundColor">#b1c3d0</Color>
    <Color x:Key="EqualButtonForegroundColor">#5f391a</Color>


    



    <!-- Кисти для кнопок -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{DynamicResource ButtonBackgroundColor}" Opacity="0.6" />
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{DynamicResource ButtonHoverBackgroundColor}" Opacity="0.6" />
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="{DynamicResource ButtonPressedBackgroundColor}" Opacity="0.6" />
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{DynamicResource ButtonForegroundColor}" />
    <SolidColorBrush x:Key="ButtonPressedForegroundBrush" Color="{DynamicResource ButtonPressedForegroundColor}" />

    <SolidColorBrush x:Key="LightButtonBackgroundBrush" Color="{DynamicResource LightButtonBackgroundColor}"  Opacity="0.6" />
    <SolidColorBrush x:Key="LightButtonHoverBackgroundBrush" Color="{DynamicResource LightButtonHoverBackgroundColor}"  Opacity="0.6" />
    <SolidColorBrush x:Key="LightButtonPressedBackgroundBrush" Color="{DynamicResource LightButtonPressedBackgroundColor}"  Opacity="0.6" />

    <SolidColorBrush x:Key="DarkButtonBackgroundBrush" Color="{DynamicResource DarkButtonBackgroundColor}"  Opacity="0.6" />
    <SolidColorBrush x:Key="DarkButtonHoverBackgroundBrush" Color="{DynamicResource DarkButtonHoverBackgroundColor}"  Opacity="0.6" />
    <SolidColorBrush x:Key="DarkButtonPressedBackgroundBrush" Color="{DynamicResource DarkButtonPressedBackgroundColor}"  Opacity="0.6" />

    <SolidColorBrush x:Key="OperationButtonBackgroundBrush" Color="{DynamicResource OperationButtonBackgroundColor}"   Opacity="0.8" />
    <SolidColorBrush x:Key="OperationButtonHoverBackgroundBrush" Color="{DynamicResource OperationButtonHoverBackgroundColor}"  Opacity="0.8" />
    <SolidColorBrush x:Key="OperationButtonPressedBackgroundBrush" Color="{DynamicResource OperationButtonPressedBackgroundColor}"  Opacity="0.8" />
    <SolidColorBrush x:Key="OperationButtonForegroundBrush" Color="{DynamicResource OperationButtonForegroundColor}" />

    <SolidColorBrush x:Key="EqualButtonBackgroundBrush" Color="{DynamicResource EqualButtonBackgroundColor}"  Opacity="0.8" />
    <SolidColorBrush x:Key="EqualButtonHoverBackgroundBrush" Color="{DynamicResource EqualButtonHoverBackgroundColor}"  Opacity="0.8" />
    <SolidColorBrush x:Key="EqualButtonPressedBackgroundBrush" Color="{DynamicResource EqualButtonPressedBackgroundColor}"  Opacity="0.8" />
    <SolidColorBrush x:Key="EqualButtonForegroundBrush" Color="{DynamicResource EqualButtonForegroundColor}" />
</ResourceDictionary>